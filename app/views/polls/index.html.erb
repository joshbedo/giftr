<div class="site-wrapper push-below-header">  <!-- Splash page wrapper. Starts below the navbar. -->
  
  <div class="site-wrapper-inner">
  
    <div class="cover-container"> 
      
      <div id="section0" class="section">
          <div id="splash-page-1" class="clearfix splash-page-section-wrapper"> <!-- Splash Page First Section -->
            <h1 class="choose_friend_polls_index">Choose The Friend You're Buying For</h1>        
            <%=image_tag("", alt: "", id: "recipient")%>
            <button class="btn btn-lg btn-danger giftee" id="block">Select Friend</button>
            <div class="occasion_container">
              <button class='btn btn-danger btn-lg go_to_2ndpage'>GO</button>
            </div>  
      <!--           <i id="block" class="fa fa-arrow-down block selection-page-arrow"></i>
       -->        </div>
            </div>

      <div id="section1" class="section">
        <div id="splash-page-2" class="clearfix splash-page-section-wrapper"> 
          <h1 class="what_gift_instructions-app selection-page-section-instructions">What Are Your Gift Ideas?</h1>
          <div class="container-fluid find_images_container clearfix">
            <div class="row-fluid url_input_and_button">
              <div class="span4 add_gift_box add_gift_1">
                <h2 class="add_gift_text">Add A Gift</h2>
                  <div class="enter_url_container">
                      <input type="text" class="form-control" id="new_item_url" name="new_item_url_input" placeholder="Enter Gift URL" onfocus="this.placeholder=''" onfocusout="this.placeholder='Enter Gift URL'">
                    <div id="scraper_button_div">
                      <button class="scraper btn btn-primary" id="scraped_files" name="scraped_files[]" multiple>Go</button>
                    <output id="list"></output>
                    </div>
                  </div>
                  <div class="upload_container">
                    <div class="or_upload_container">
                      <div class="or_container">
                        <hr class="or_divider">
                        <h4 class="or_text_1">Or</h4>
                        <hr class="or_divider">
                      </div> 
                      <button class="uploader btn btn-primary btn-file">Upload Image<input type="file" class="filestyle" data-classButton="btn btn-primary" id="files" name="files[]" multiple /></button>
                    </div>
                  </div>
              </div>
              <div class="span4 add_gift_box add_gift_2"> 
                <h2 class="add_gift_text">Add A Gift</h2>   
                  <div class="add_photo_url_2_container">
                    <input type="text" class="form-control" id="new_item_url_2" name="new_item_url_input_2" placeholder="Enter Gift URL" onfocus="this.placeholder=''" onfocusout="this.placeholder='Enter Gift URL'">
                  <div id="scraper_button_div">
                    <button class="scraper_2 btn btn-primary" id="scraped_files" name="scraped_files[]" multiple>Go</button>
                  <output id="list"></output>
                  </div>
                  </div>
                  <div class="upload_container_2"> 
                    <div class"or_upload_container_2">
                      <div class="or_container_2">
                        <hr class="or_divider_2">
                        <h4 class="or_text_2">Or</h4>
                        <hr class="or_divider_2">
                      </div>                    
                  <button class="uploader_2 btn btn-primary btn-file">Upload Image<input type="file" class="filestyle" data-classButton="btn btn-primary" id="files_2" name="files[]" multiple /></button>
                  </div>
                </div>
              </div>
              <div class="span4 add_gift_box add_gift_3">
                <h2 class="add_gift_text">Add A Gift</h2>
                  <div class="add_photo_url_3_container">
                    <input type="text" class="form-control" id="new_item_url_3" name="new_item_url_input_3" placeholder="Enter Gift URL" onfocus="this.placeholder=''" onfocusout="this.placeholder='Enter Gift URL'">
                  <div id="scraper_button_div">
                    <button class="scraper_3 btn btn-primary" id="scraped_files" name="scraped_files[]" multiple>Go</button>
                  <output id="list"></output>
                  </div>
                  </div>
                  <div class="upload_container_2"> 
                    <div class"or_upload_container_2">
                      <div class="or_container_2">
                        <hr class="or_divider_2">
                        <h4 class="or_text_2">Or</h4>
                        <hr class="or_divider_2">
                      </div> 
                  <button class="uploader_3 btn btn-primary btn-file">Upload Image<input type="file" class="filestyle" data-classButton="btn btn-primary" id="files_3" name="files[]" multiple /></button> 
                 </div> 
               </div>   
              </div>             
          </div> 
          <div class="row-fluid">   
            <div class="span4 item_list"></div>
            <div class="span4 item_list_2"></div> 
            <div class="span4 item_list_3"></div>
          </div>
          <div class="scrapedImagesHover" style="display:none;">
            <%=image_tag("cancel-new.png", :class => "close-me")%>
            <h1 class="choose_scraped_image">Click An Image To Add It:</h1> 
            <div class="flexslider">  
              <ul class="slides"></ul>
            </div>
          </div>

          <i id="block" class="fa fa-arrow-down selection-page-section-2-arrow"></i>

        </div>
      </div>
    </div>
      <div id="section3" class="section">
        <div id="splash-page-3" class="clearfix splash-page-section-wrapper"> <!-- Splash Page Third Section -->
          <h1 class="pick_friends_instructions-app selection-page-section-instructions">Create A Private Facebook Poll</h1>
          <div id="index-accomplices">
          </div>
          <button class="btn btn-danger btn-lg mutual-friends-link" id="">Select Friends</button>
          
        </div>
      </div>

    </div>
  
  </div>

</div>

<%= render text: File.read("app/views/templates.txt").html_safe %>
